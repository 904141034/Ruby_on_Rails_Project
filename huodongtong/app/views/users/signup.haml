.single-form-container
  .well.well-lg.backpanel
    = form_for @user do |f|
      .register 新用户注册
      .login_user
        = link_to "用户登录", root_path
      %br
      .input-group
        = f.label :帐号, class: "input-group-addon ", :style => "padding-left: 50px;padding-right: 50px"
        = f.text_field :name, class: " form-control "
      %br
      .input-group
        = f.label :请设置密码, class: "input-group-addon", :style => "padding-left: 30px;padding-right: 30px"
        = f.password_field :password, class: "form-control"
      %br
      .input-group
        = f.label :请确认密码, class: " input-group-addon", :style => "padding-left: 30px;padding-right: 30px"
        = f.password_field :password_confirmation, class: "form-control"
      %br
      .input-group
        = f.label :忘记密码问题, class: " input-group-addon", :style => "padding-left: 24px;padding-right: 24px"
        = f.text_field :forget_password_question, class: "form-control"
      %br
      .input-group
        = f.label :忘记密码答案, class: " input-group-addon", :style => "padding-left: 24px;padding-right: 24px"
        = f.text_field :forget_password_answer, class: "form-control"
      %br
        - if @user.errors.any?
          .alert.alert-danger.alert-style
            = @user.errors.full_messages.first
        %p
          = f.submit "注册", class: "btn btn-large btn-primary sign_up_button"