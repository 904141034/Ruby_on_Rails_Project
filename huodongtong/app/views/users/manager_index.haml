.single-form-container
  .well.well-lg.panel_heading
    .manager-index-header
      用户管理 &nbsp&nbsp&nbsp
      = link_to "+添加用户", add_user_path,:class=>"btn btn-default"
  %table.table.panel-first-row.table-bordered
    %tr
      %td(align="center")  编号
      %td(align="center")  用户名
      %td(align="center")   操作
    - id=(@page_index-1)*10
    - @user.each do |user|
      %tr
        %td(align="center")= id=id+1
        %td(align="center")= user.name
        %td(align="center")
          = link_to "删除" ,delete_user_path(:name=>user[:name]),data:{ :confirm =>'您确定要删除'+user.name+'?'} , :method=>:delete
          = link_to "修改密码",change_password_path(:name=>user[:name])
  .paginate.pagestyle
    = will_paginate @user, :previous_label=>'<<',:next_label=>'>>'
