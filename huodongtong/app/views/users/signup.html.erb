<div class="single-form-container">
  <div class="well well-lg backpanel">
    <%= form_for @user do |f| %>
        <div class="register">新用户注册</div>
        <div class="login_user">
          <%= link_to "用户登录", root_path %>
        </div>
        <br>

        <div class="input-group">
          <%= f.label :name , class: "input-group-addon " ,:style => "padding-left: 50px;padding-right: 50px"%>
          <%= f.text_field :name, class: " form-control " %>
        </div>
        <br>

        <div class="input-group">
          <%= f.label :password, class: "input-group-addon" ,:style => "padding-left: 30px;padding-right: 30px"%>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <br>

        <div class="input-group">
          <%= f.label :password_confirmation, class: " input-group-addon",:style => "padding-left: 30px;padding-right: 30px" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
        <br>

        <div class="input-group">
          <%= f.label :forget_password_question, class: " input-group-addon",:style => "padding-left: 24px;padding-right: 24px" %>
          <%= f.text_field :forget_password_question, class: "form-control" %>
        </div>
        <br>

        <div class="input-group">
          <%= f.label :forget_password_answer, class: " input-group-addon" ,:style => "padding-left: 24px;padding-right: 24px"%>
          <%= f.text_field :forget_password_answer, class: "form-control" %>
        </div>
        <br>

        <p><%= f.submit "注册", class: "btn btn-large btn-primary sign_up_button" %></p>
        </div>

    <% end %>
    </div>
</div>